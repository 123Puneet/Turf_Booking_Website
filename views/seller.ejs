<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        
        .navbar-brand{
            font-size: 2rem;
        }
    </style>   
    </head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Seller Corner</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mr-0" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Go to Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/sellerAddProduct">Add Product</a>
                    </li>
                </ul>
            </div>
        </div>
        </nav>
        <form action="/deleteProduct" method="POST">
            <table class="table">
                <h5>My Products</h5>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Turf Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Img</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i < products.length; i++) { %>
                        <tr>
                            <td>
                                <%= i %>
                            </td>
                            <td>
                                <%= products[i].turfName %>
                            </td>
                            <td>
                                <%= products[i].location %>
                            </td>
                            <td><img src="<%= products[i].image_icon %>"></td>
                            <td>
                                <button type="submit" name="iId" class="btn btn-danger"
                                    value="<%= products[i].iId %>">Delete</button>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </form>

    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
        
</body>

</html>